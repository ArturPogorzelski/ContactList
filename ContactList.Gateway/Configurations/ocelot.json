{
  "Routes": [
    {
      // Definiuje ścieżkę, która ma być przetwarzana przez usługę docelową, 
      // gdzie `{everything}` oznacza wszystkie możliwe ścieżki i zapytania pod tą trasą.
      "DownstreamPathTemplate": "/api/v1/auth/{everything}",

      // Określa schemat komunikacji z usługą docelową, w tym przypadku HTTPS.
      "DownstreamScheme": "https",

      // Określa, gdzie znajduje się usługa docelowa, w tym przypadku na localhost:7123.
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7123
        }
      ],

      // Definiuje, jakie ścieżki na bramie API (Upstream) będą przekierowywane do Downstream.
      "UpstreamPathTemplate": "/auth/{everything}",

      // Lista metod HTTP, które są obsługiwane przez tę trasę.
      "UpstreamHttpMethod": [ "Post" ],

      // Konfiguracja uwierzytelniania dla tej trasy; używa klucza dostawcy "JwtBearer".
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtBearer",
        "AllowedScopes": []
      },

      // Konfiguracja równoważenia obciążenia dla tej trasy; używa prostego algorytmu rotacyjnego.
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },

      // Konfiguracja QoS (Quality of Service) obejmująca Circuit Breaker.
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 3,
        "DurationOfBreak": 10,
        "TimeoutValue": 30000
      },

      // Ustawienia limitowania liczby żądań w określonym czasie, aby uniknąć przeciążenia.
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "1m",
        "Limit": 100
      },

      // Konfiguracja cachowania odpowiedzi, aby przyspieszyć odpowiedzi na powtarzające się żądania.
      "FileCacheOptions": {
        "TtlSeconds": 30,
        "Region": "auth"
      },

      // Konfiguracja dodatkowych opcji dla handlerów HTTP.
      "HttpHandlerOptions": {
        "AllowAutoRedirect": false,
        "UseCookieContainer": false,
        "UseTracing": true
      }
    }
  ],
  "GlobalConfiguration": {
    // Globalna konfiguracja URL bazowego, gdzie brama API jest dostępna.
    "BaseUrl": "https://localhost:7000"
  }
}